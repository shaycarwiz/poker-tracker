{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach by Process ID",
      "processId": "${command:PickProcess}",
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "name": "Debug All (API + Web)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/concurrently",
      "args": [
        "\"npm run dev --workspace=@poker-tracker/api\"",
        "\"npm run dev --workspace=@poker-tracker/web\""
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "development"
      },
      "presentation": {
        "group": "Poker Tracker",
        "order": 1
      }
    },
    {
      "name": "Debug API Only",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/packages/api/src/index.ts",
      "cwd": "${workspaceFolder}/packages/api",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "development"
      },
      "presentation": {
        "group": "Poker Tracker",
        "order": 2
      },
      "runtimeArgs": ["-r", "ts-node/register"]
    },
    {
      "name": "Debug Web Only",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/packages/web/node_modules/.bin/next",
      "args": ["dev"],
      "cwd": "${workspaceFolder}/packages/web",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "development"
      },
      "presentation": {
        "group": "Poker Tracker",
        "order": 3
      }
    }
  ]
}