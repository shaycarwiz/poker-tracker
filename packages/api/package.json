{
  "name": "@poker-tracker/api",
  "version": "1.0.0",
  "description": "A comprehensive poker tracking application with statistics and analytics",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run tsoa:gen && tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "dev": "npm run tsoa:gen && ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "lint:check": "eslint . --ext .ts,.js --max-warnings 0",
    "lint:staged": "eslint --ext .ts,.js --fix",
    "type-check": "tsc --noEmit",
    "migrate": "ts-node -r tsconfig-paths/register src/infrastructure/database/migrations/cli.ts",
    "migrate:run": "npm run migrate run",
    "migrate:status": "npm run migrate status",
    "migrate:rollback": "npm run migrate rollback",
    "migrate:history": "npm run migrate history",
    "migrate:build": "tsc -p tsconfig.build.json && node dist/infrastructure/database/migrations/cli.js",
    "generate:env": "node scripts/generate-env.js",
    "check:all": "npm run type-check && npm run lint:check && npm test",
    "pre-commit": "npm run lint:staged && npm run type-check",
    "docs:serve": "npm run dev",
    "docs:build": "npm run build",
    "tsoa:routes": "tsoa routes",
    "tsoa:spec": "tsoa spec",
    "tsoa:gen": "tsoa routes && tsoa spec"
  },
  "keywords": [
    "poker",
    "tracking",
    "statistics",
    "analytics",
    "express",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.6.0",
    "tsyringe": "^4.10.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "packageManager": "npm@10.8.2",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
