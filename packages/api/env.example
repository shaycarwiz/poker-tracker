# Server Configuration
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# CORS Configuration
# REQUIRED in production - specify allowed origins (comma-separated)
# Example: CORS_ORIGIN=https://yourdomain.com,https://app.yourdomain.com
CORS_ORIGIN=http://localhost:3000

# Database Configuration
# REQUIRED - Database connection settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=poker_tracker
DB_USERNAME=postgres
# REQUIRED - Must be at least 8 characters long
DB_PASSWORD=your-secure-database-password
DB_SSL=false

# JWT Configuration
# REQUIRED - Must be at least 32 characters long for security
# Generate a secure secret: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-must-be-32-chars-min
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-must-be-32-chars-min
JWT_REFRESH_EXPIRES_IN=7d

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Poker Configuration
# REQUIRED - Must be a valid 3-letter currency code (USD, EUR, GBP, etc.)
DEFAULT_CURRENCY=USD
